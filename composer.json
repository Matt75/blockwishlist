{
  "name": "prestashop/blockwishlist",
  "description": "PrestaShop module blockwishlist",
  "homepage": "https://github.com/PrestaShop/blockwishlist",
  "license": "AFL-3.0",
  "type": "prestashop-module",
  "authors": [
    {
      "name": "PrestaShop SA",
      "email": "contact@prestashop.com"
    }
  ],
  "config": {
    "platform": {
      "php": "5.6.0"
    },
    "preferred-install": "dist",
    "prepend-autoloader": false
  },
  "require": {
    "php": ">=5.6.0",
    "prestashop/circuit-breaker": "^3.0.0"
  },
  "autoload": {
    "psr-4": {
      "PrestaShop\\Module\\WishList\\": "src/"
    },
    "classmap": ["blockwishlist.php"]
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "prestashop/php-coding-standards": "dev-master"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "unit-tests": [
      "@php -d date.timezone=UTC ./vendor/bin/phpunit -c tests/Unit/phpunit.xml"
    ],
    "lint": [
      "php-cs-fixer fix --no-interaction --dry-run --diff"
    ]
  }
}
